@model App.data.Models.Restaurant

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Restaurant</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nom</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.nom)</dd>
        <dt class="col-sm-2">Téléphone </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.num_tel)</dd>
        <dt class="col-sm-2"> Commentaire</dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.commentaire) </dd>
        <dt class="col-sm-2"> Contact</dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.mail_proprio)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index">Retour</a>
    </form>
</div>
